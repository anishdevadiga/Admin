<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/white"
    android:backgroundTint="@color/white"
    android:background="@drawable/dashboard_cardview"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="208dp"
        android:padding="15dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/rentpic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_background"
            app:shapeAppearanceOverlay="@style/circular"
            app:strokeWidth="2dp"

            />

        <TextView
            android:id="@+id/rentname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/rentpic"
            android:fontFamily="@font/amaranth"
            android:paddingTop="10dp"
            android:text=" Name"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnrentedit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/rentname"
            android:layout_marginStart="135dp"
            android:layout_marginTop="70dp"
            android:backgroundTint="@color/blue"
            android:fontFamily="@font/andika"
            android:text="Edit"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold"
            app:cornerRadius="30dp" />

        <Button
            android:id="@+id/btnrentdelete"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btnrentedit"
            android:layout_marginStart="135dp"
            android:layout_marginTop="60dp"
            android:backgroundTint="@color/blue"
            android:fontFamily="@font/andika"
            android:text="Delete"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold"
            app:cornerRadius="30dp" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>

